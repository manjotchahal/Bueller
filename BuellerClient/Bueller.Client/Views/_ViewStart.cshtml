@{
    try
    {
        if (Request.Cookies["Role"].Value == "teacher")
        {
            Layout = "~/Views/Shared/TeacherView.cshtml";
        }
        else if (Request.Cookies["Role"].Value == "student")
        {
            Layout = "~/Views/Shared/StudentView.cshtml";
        }
        else if (Request.Cookies["Role"].Value == "employee")
        {
            Layout = "~/Views/Shared/EmployeeView.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/HomeView.cshtml";
        }
    }
    catch
    {
        Layout = "~/Views/Shared/HomeView.cshtml";
    }
}